<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.HistoryActivity">

    <LinearLayout
        android:id="@+id/activity_history_one_week"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="75dp"
        android:layout_weight="1"
        android:background="@color/light_sage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Il y a une semaine"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_history_6_days"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="75dp"
        android:layout_weight="1"
        android:background="@color/light_sage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Il y a 6 jours"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_history_5_days"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="75dp"
        android:layout_weight="1"
        android:background="@color/light_sage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Il y a 5 jours"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_history_4_jours"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="75dp"
        android:layout_weight="1"
        android:background="@color/light_sage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Il y a 4 jours"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_history_3_jours"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="75dp"
        android:layout_weight="1"
        android:background="@color/light_sage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Il y a 3 jours"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_history_2_days"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="75dp"
        android:layout_weight="1"
        android:background="@color/light_sage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Avant hier"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_history_yesterday"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="75dp"
        android:layout_weight="1"
        android:background="@color/light_sage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Hier"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>